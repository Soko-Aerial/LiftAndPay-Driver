<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LiftAndPayDriver" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColors</item>
        <item name="colorPrimaryVariant">#2F6AC8</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>

        <!-- Customize your theme here. -->
    </style>

<!--    Theme For SplashScreen-->
    <style name="Theme.Transparent" parent="Theme.MaterialComponents.Light.NoActionBar">
<!--        <item name="android:windowShowAnimation"-->
        <item name="android:windowBackground">@color/primaryColors</item>
        <item name="android:windowFullscreen">true</item>
<!--        <item name="android:windowNoTitle">true</item>-->
<!--        <item name="android:windowIsFloating">false</item>-->
        <item name="android:windowActivityTransitions">false</item>
<!--        <item name="android:backgroundDimEnabled">false</item>-->
    </style>



    <style name="ShapeAppearanceOverlay.Cut.ShapeableImageView" parent="">
        <item name="cornerFamily">cut</item>
        <item name="cornerRadius">18dp</item>
    </style>


    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_bkg</item>
    </style>

    <style name="txt_RideDetailHeading_Style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primaryColors</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">end</item>
    </style>

    <style name="txt_LeftDetail_Style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="txt_RightDetail_Style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
    </style>


    <style name="Layout_ForIndividualComponent_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/primaryColors</item>
        <item name="android:layout_marginHorizontal" tools:targetApi="o">5dp</item>
        <item name="android:layout_marginVertical" tools:targetApi="o">16dp</item>
        <item  name="android:orientation">horizontal</item>
    </style>

    <style name="txt_CarDetails_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">Car Details</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginVertical" tools:targetApi="o">8dp</item>

    </style>

    <style name="TextInputLayout_style" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxCornerRadiusTopStart">0dp</item>
        <item name="boxCornerRadiusTopEnd">0dp</item>
        <item name="boxCornerRadiusBottomStart">0dp</item>
        <item name="boxCornerRadiusBottomEnd">0dp</item>
        <item name="android:layout_marginVertical" tools:targetApi="o">5dp</item>
        <item name="boxBackgroundColor">@color/transparentColor</item>
        <item name="android:textColorHint">@color/hintColor</item>
        <item name="hintTextColor">@color/hintColor</item>
        <item name="boxStrokeColor">@color/primaryColors</item>
    </style>

    <style name="TextInputText_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/primaryColors</item>
        <item name="android:lines">1</item>
    </style>


    <style name="TextInputText_UploadRide_style">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/primaryColors</item>
        <item name="android:gravity">start</item>
        <item name="background">@color/transparentColor</item>
        <item name="android:textColorHint">#65000000</item>
        <item name="android:lines">1</item>
    </style>

    <style name="TextInputLayout_UploadRide_style" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxCornerRadiusTopStart">0dp</item>
        <item name="boxCornerRadiusTopEnd">0dp</item>
        <item name="boxCornerRadiusBottomStart">0dp</item>
        <item name="boxCornerRadiusBottomEnd">0dp</item>
        <item name="android:layout_marginVertical" tools:targetApi="o">5dp</item>
        <item name="boxBackgroundColor">@color/transparentColor</item>
        <item name="android:textColorHint">@color/hintColor</item>
        <item name="hintTextColor">@color/hintColor</item>
        <item name="boxStrokeColor">@color/primaryColors</item>
    </style>


    <style name="ProfileMenuLayout_Style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">3dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">@drawable/ripple</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="ProfileMenuText_Style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/primaryColors</item>
        <item name="android:layout_gravity">center_vertical</item>

    </style>



    <style name="ProfileMenuImage_Style">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_gravity">center_vertical</item>

    </style>


    <style name="TextLabelForPendingFragment">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/primaryColors</item>
    </style>

    <style name="smallIconBtnStyle">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">@drawable/ripplebtn</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">30dp</item>
        <item name="background">@drawable/ripplebtn</item>
    </style>

    <style name="TextForPendingFragment">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primaryColors</item>
    </style>



<style name="ParentLayoutForCarImages">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:orientation">vertical</item>
    <item name="android:layout_margin">10dp</item>
</style>


    <style name="TextViewForCarImages">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:drawableEnd">@drawable/img_camera</item>
       <item  name="android:gravity">center</item>
    </style>

    <style name="ImageViewForCarImages">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">150dp</item>
        <item  name="android:focusable">true</item>
        <item  name="android:clickable">true</item>
        <item name="android:background">@drawable/ripple</item>
        <item   name="android:backgroundTint">@color/white</item>
        <item name="android:padding">25dp</item>
        <item name="android:foreground">@drawable/img_bck_rectangle</item>
    </style>


    <style name="ShapeAppearance.CircularBorder" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">55%</item>
    </style>


    <!--From Gerorge message-->
    <style name="contact_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">79dp</item>
        <item name="android:background">@drawable/ripple</item>
        <item name="android:clickable">true</item>

        <item name="android:focusable">false</item>
        <item name="android:orientation">horizontal</item>

    </style>


    <style name="picture_image">

        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="picture_card">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="cardCornerRadius">50dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="nameOfContact">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">23dp</item>
    </style>

    <style name="msg_name_layout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name= "android:layout_margin">5dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="messages">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginVertical">10dp</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textColor">#605E5E</item>

    </style>
    <style name="status_layout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="dateOfMessage_layout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#716F6F</item>
    </style>
    <style name="num_of_messages">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginVertical">10dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:background">@drawable/ic_circle</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="divider_view">
        <item name="android:layout_marginStart">100dp</item>
        <item name="android:layout_width">330dp</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@color/fadedBlue</item>
        <item name="android:layout_marginVertical">0dp</item>
    </style>
    <!--End of George Message-->
</resources>