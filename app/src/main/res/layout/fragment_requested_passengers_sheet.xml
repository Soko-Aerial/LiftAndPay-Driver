<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="3dp"
    android:orientation="vertical"
    android:background="@drawable/bottom_sheet_bkg"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
    tools:context=".uploadedRide.RequestedPassenger.RequestedPassengersSheet">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RIDE REQUESTS"
        android:padding="8dp"
        android:textColor="@color/primaryColors"
        android:textSize="17sp"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
 />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/requestedRecyclerView"
        android:layout_width="match_parent"
        android:layout_marginTop="8dp"
        android:layout_height="wrap_content"
        tools:listitem="@layout/model_requested_passenger"
        />

</LinearLayout>