<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="3dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">



        <RelativeLayout
            android:id="@+id/requestedPassengerRelativeLayoutId"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:foreground="@color/transparentColor"
            android:background="@drawable/ripple"
            android:focusable="true">

            <ImageView
                android:id="@+id/numberOfRequestedPassengersId"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:background="@drawable/img_circle"
                android:src="@drawable/img_car_front"
                android:gravity="center"
                android:text="4"
                android:textColor="@color/primaryColors"
                android:textSize="20sp" />


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/uploadedLinearLayoutId"
            android:layout_width="290sp"
            android:layout_height="wrap_content"
            android:background="@drawable/ripple"
            android:clickable="true"
            android:focusable="true"
            android:foreground="@color/transparentColor"
            android:orientation="vertical"
            android:padding="5dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/journeyId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lapaz Toyata - Ablekuma"
                    android:textColor="@color/primaryColors"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <ProgressBar
                    android:id="@+id/proceedToMapProgressbarrId"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="25dp"
                    android:progressTint="@color/primaryColors"
                    android:visibility="gone" />
            </LinearLayout>

            <View
                android:id="@+id/divider5"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="3dp"
                android:background="@color/fadedBlue" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/dateModelId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/img_date"
                    android:drawableTint="@color/black"
                    android:gravity="center"
                    android:text="12th Feb 2021"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/timeModelId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/img_time"
                    android:drawableTint="@color/black"
                    android:gravity="center"
                    android:text="12:00pm"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/rideStatusId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ride status"
                    android:background="@color/extraFadedBlue"
                    android:textColor="@color/primaryColors"
                    android:padding="2dp"/>

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />

</LinearLayout>