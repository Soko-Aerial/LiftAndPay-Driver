<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="15dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Review this passenger to help other drivers"
        android:textColor="@color/primaryColors"
        android:textSize="18sp"
        android:textStyle="bold" />

    <RatingBar
        android:id="@+id/ratingsId"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:progressTint="@color/primaryColors" />



    <EditText
        android:id="@+id/ratingsCommentId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:hint="Comments"
        android:minHeight="70dp"
        android:textColor="@color/primaryColors"
        android:textColorHighlight="@color/primaryColors"

        android:textColorHint="@color/fadedBlue" />

    <TextView
        android:id="@+id/submitId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:background="@drawable/ripple"
        android:backgroundTint="@color/primaryColors"
        android:clickable="true"
        android:focusable="true"
        android:padding="6dp"
        android:text="submit"
        android:textColor="@color/white" />


</androidx.appcompat.widget.LinearLayoutCompat>