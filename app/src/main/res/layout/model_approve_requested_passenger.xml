<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/mainRequestedPassengerLayout"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="80dp"
    android:padding="3dp"
    android:clickable="true"
    android:focusable="true"
    android:background="@drawable/ripple"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/black"
        android:backgroundTint="@color/primaryColors"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@color/fadedBlue"
        android:layout_margin="2dp"
        android:background="@drawable/btn_profile"/>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="The Passenger Name"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0200254997"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:textColor="@color/primaryColors"
            android:text="Tesano, around achimota overhead"/>
    </LinearLayout>



    </LinearLayout>


</LinearLayout>



