<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="15dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Copy and send this link to your passengers"
        android:textColor="@color/primaryColors"
        android:textSize="18sp"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/generatedlink"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:hint="Comments"


            android:text="theRideTExtlinkwIlLbeHEre"
            android:textColorHint="@color/fadedBlue" />

        <TextView
            android:id="@+id/copyBtn"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="3dp"
            android:background="@drawable/ripple"
            android:backgroundTint="@color/transparentColor"
            android:clickable="true"
            android:focusable="true"
            android:foreground="@drawable/btn_copy"
            android:textColor="@color/primaryColors"
            android:textColorHighlight="@color/primaryColors"
            android:textColorHint="@color/fadedBlue" />
    </LinearLayout>


</androidx.appcompat.widget.LinearLayoutCompat>