<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_id"
    android:layout_width="match_parent"
    android:focusable="true"
    android:clickable="true"
    android:background="@drawable/ripple"
    android:layout_height="70dp"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/fadedBlue"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pAnameId"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Name of Passenger"
            android:maxWidth="90dp"
            android:padding="3dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/pAstatusId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Online"
            android:textAlignment="textEnd"
            android:textColor="@color/primaryColors"
            android:padding="3dp"
            android:textStyle="bold"/>
    </LinearLayout>


    <TextView
        android:id="@+id/pALastMessageId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="the last message sent to the to the driver from the passenger"
        android:ems="1"
        android:padding="3dp"
        android:maxLines="1"
        />



</LinearLayout>