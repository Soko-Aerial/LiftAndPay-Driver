<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".accounts.AccountActivity">

    <RelativeLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primaryColors"
        android:padding="12dp">

        <ImageView
            android:id="@+id/back_arrow"
            android:layout_width="47dp"
            android:layout_height="34dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="1dp"
            android:scrollbarSize="10dp"
            android:src="@drawable/btn_back"
            app:tint="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
           android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_toEndOf="@+id/back_arrow"
            android:text="Accounts"
            android:textColor="#FAF6F6"
            android:textSize="20sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/amountBar"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_below="@id/appBar"
        android:layout_marginTop="0dp"
        android:background="@color/fadedBlue">

        <TextView
            android:id="@+id/amountT"
            android:layout_width="110dp"
            android:layout_height="32dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="24dp"
            android:layout_marginTop="18dp"
            android:text="Amount"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/img_bck_rectangle"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:id="@+id/amountTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/amountT"
                android:text="Gh"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5000.00"
                android:textColor="@color/primaryColors"
                android:textSize="45sp"
                android:textStyle="bold" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/swipeBar"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_below="@id/amountBar"
        android:layout_marginTop="0dp"
        android:background="@color/fadedBlue">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/fadedBlue"
            app:layout_constraintTop_toBottomOf="parent" />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tab_layout" />

    </RelativeLayout>

</RelativeLayout>